<div>
  <ul class="<%= classname %>">				
    <% events.each do |event| %>
      <li>
        <b><%= event.title %></b>
        <p><%= event.main_category << '/' << event.sub_category %></p>
        <p>
          <%= render 'layouts/formatted_dates', :event => event, :max_num => 1 %>
        </p>
        <p><%= raw truncate(event.description, :length => 300) %></p>
        <!--<p><%# image_tag event.image.url(:thumb) %></p>-->
        <% if event.image_url && event.image_url.length %>
          <p><img src="<%= event.image_url %>" width="300" height="300" /></p>
        <% end %>
        <p><%= link_to 'Zeigen', event_path(event.id) %></p>
        <p><%= link_to 'Als PDF anzeigen', pdf_event_path(event.id) %></p>
        <p><%= link_to_if (current_user && event.user && current_user.id == event.user.id) || (current_user && current_user.federal_user && event.user && event.user.regional_user) || current_admin, 'Bearbeiten', edit_event_path(event.id) %></p>
        <p><%= link_to_if (current_user && event.user && current_user.id == event.user.id) || (current_user && current_user.federal_user && event.user && event.user.regional_user) || current_admin, 'Löschen', event_path(event.id), :method => :delete %></p></p>
      </li>
    <% end %>
  </ul>

  <span class="prev">prev</span>
  <span class="next">next</span>
</div>