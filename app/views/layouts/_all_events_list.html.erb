<div id="page-wrap">
		
  <div id="tabs">
  
    <ul>
      <% num = 0 %>
      <% (events.count/10).downto(0) do %>
        <li><a href="#fragment-<%= num += 10 %>"><%= num %></a></li>
      <% end %>
    </ul>
    
    <% num = 10 %>
    <% newTab = false %>
    <% for event in events %>
      
      <% if (num % 10) == 0 %>
        <% newTab = true %>
        <% if num >= 20 %>
          <div id="fragment-<%= num %>" class="ui-tabs-panel ui-tabs-hide">
        <% else %>
          <div id="fragment-<%= num %>" class="ui-tabs-panel">
        <% end %>
      <% end %>
      
            <div>
              <h2><%= event.title %></h2>
              <p>
                <%= render 'layouts/formatted_dates', :event => event, :max_num => 3 %>
              </p>
              <% if carousel_activated %>
                <p><%= event.main_category %></p>
              <% else %>
                <p><%= event.main_category << '/' << event.sub_category %></p>
              <% end %>
              <!--<p><%# image_tag event.image.url(:thumb) %></p>-->
              <% if event.image_url && event.image_url.length %>
                <p><img src="<%= event.image_url %>" width="300" height="300" /></p>
              <% end %>
              <p><%= raw truncate(event.description, :length => 40) %></p>
              <p><%= link_to 'Zeigen', event_path(event.id) %></td>
              <%= link_to 'Als PDF anzeigen', pdf_event_path(event.id) %>
              <%= link_to_if (current_user && event.user && current_user.id == event.user.id) || current_admin, 'Bearbeiten', edit_event_path(event.id) %>
              <%= link_to_if (current_user && event.user && current_user.id == event.user.id) || current_admin, 'Löschen', event_path(event.id), :method => :delete %></p>
            </div>
        
        <% if newTab && ((num + 1) % 10) == 0 %>
          <% newTab = false %>
          </div> 
        <% end %>
        
        <% num += 1 %>
    <% end %>
    </div>
  </div>
</div>