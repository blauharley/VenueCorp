
<% old_event = true %>

<% if event.start_date && event.start_date >= Date.today %>
    <b style=""><%= event.start_date.strftime('%d.%b %Y') << ' '<< event.start_date_time.strftime('%H:%M:%S') %></b>
    <% old_event = false %>
<% end %>

<% if event.repeat_dates && event.repeat_dates.length != 0 %>
    
  <% num = 0 %>
  <p><b>
    <% event.repeat_dates.split(' ').each do |date| %>
      
        <% if date >= Date.today.to_s %>
        
          <% num += 1 %>
          <% old_event = false %>
          
          <%= DateTime.parse(date).strftime('%d.%b %Y') + '/' %>
          
          <% if num == max_num %>
            <% break %>
          <% end %>
          
        <% end %>
    <% end %>
  </b></p>
  
<% end %>

<% if old_event %>
  <b style="float:right; margin-right:10px">Veranstaltung ist veraltet</b>
<% end %>
