<% ele = 0 %>
<% show_formated_repeat_dates(event.repeat, event.start_date).each do |date| %>
  
  <% if date >= Date.today && ele < 3 %>
    <%= date.to_s + '/' %>
  <% end %>
  
  <% if date < Date.today %>
    <% ele -= 1 %>
  <% else %>
    <% ele += 1 %>
  <% end %>
<% end %>
<% if event.repeat != 'never' %>
  ...
<% end %>