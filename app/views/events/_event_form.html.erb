<%= e.text_field :end_date_time %></p>

<p><%= label_tag :photo_url, 'Bild-Url' %>
<%= e.text_field :photo_url %></p>

<p><%= label_tag :short_description, 'Kurzbeschreibung' %>
<%= e.text_field :short_description %></p>

<p><%= label_tag :long_description, 'Langbeschreibung' %>
<%= e.text_field :long_description %></p>

<p><%= label_tag :venue_url, 'Website-Url' %>
<%= e.text_field :venue_url %></p>

<p><%= label_tag :email, 'E-mail Adresse' %>
<%= e.text_field :email %></p>

<p><%= label_tag :tel_nr, 'Tel. Nr.' %>
<%= e.text_field :tel_nr %></p>

<p><%= e.submit 'OK', :name => nil %></p>

<% end %>