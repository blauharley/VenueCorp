<h1>Event-Kalender</h1>

<p>Hier login</p>

<h3>Suche</h3>

<div>
  <%= render 'layouts/search_form' %>
  <%= render 'layouts/csv_upload_form' %>
</div>

<table>
  <tr><td><%= link_to 'Alle Veranstaltungen', root_path %></td></tr>
  <tr><td><%= link_to 'Highlights', event_highlight_path('true') %></td></tr>
  <tr><td><%= link_to 'Verstanstaltung hinzufügen', new_event_path %></td></tr>
</table>

<%= render 'layouts/event_cat_list', :event_main_cats => @event_main_cats, :event_sub_cats => @event_sub_cats %>
<%= render 'layouts/calender', :entries => @events %>

<%= render 'layouts/event_list', :events => @events %>

<%= link_to 'Kontakt', contact_path %>
<%= link_to 'RSS Feed', event_feed_path( get_event_ids(@events) ) << '.rss' %>
