<%= link_to 'Home', root_path %>

<h3>Userliste</h3>

<%= render 'layouts/navibar', :all_venues => @all_venues, :all_cats => @all_event_cats, :federal_clicked => nil, :regional_clicked => nil %>
<%= render 'layouts/user_panel' %>
<br/>
<br/>

<ul>
<% for user in @users %>
  <li>
    <b><%= 'Username:' << user.email %></b>
    <%= button_to "User bearbeiten", edit_user_registration_path(user.id), :method => :get %>
    <%= button_to "User löschen", { :controller => 'registration', :action => 'destroy', :id => user.id }, :confirm => "Wirklich löschen?", :method => :delete %>
  </li>
  <% if !user.events.empty? %>
    <li>
      <ul>
        <li>Veranstaltungen:</li>
        <% for event in user.events %>
          <li><%= link_to event.title << ' Kat. ' << event.main_category << '/' << event.sub_category, event_path(event.id) %></li>
        <% end %>
      </ul>
    </li>
  <% else %>
    <li>Keine Veranstaltungen</li>
  <% end %>
<% end %>
</ul>